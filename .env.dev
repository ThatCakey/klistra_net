# The port to expose the web interface on (Docker Host Port)
WEB_PORT=8080

# The internal port the application listens on (default: 8080)
PORT=8080

# Secret key for session encryption (change this to a random string)
SESSION_SECRET=dev-session-secret-string

# Gin mode (debug or release)
GIN_MODE=debug

# Path to the SQLite database file
DB_PATH=klistra.db
